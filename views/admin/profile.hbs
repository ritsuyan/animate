<html>
<head>
  {{>head}}
</head>

<body id="profile">

<div class="container-fluid">

  {{>admin_header}}

  <div class="row">

    <div class="col-sm-3">
      {{>profile_nav this}}
    </div>

    <div class="col-sm-9">

      <div class="panel panel-default">
        <div class="panel-heading">{{user.username}} 的账户</div>
        <div class="panel-body">

          <form class="form" method="post" enctype="multipart/form-data">

            <div class="form-group">
              <img class="pull-left img-circle avatar"
                   src="{{user.avatar}}">
              <div>
                <label for="avatar">头像</label>
                <input type="file" name="avatar" accept="image/*">
              </div>
            </div>

            <div class="form-group">
              <label for="title">账户名称</label>
              <input type="text" class="form-control" id="title" name="title" placeholder=""
                     value="{{user.title}}">
            </div>

            <div class="form-group">
              <label for="description">账户描述<label>
              <input type="text" class="form-control" id="description" name="description" placeholder="这是一个了不起的账户..."
                     value="{{user.description}}">
            </div>

            <button type="submit" class="btn btn-default">保存</button>

          </form>
        </div>

      </div>

    </div>
  </div>
</div>
</body>
</html>


